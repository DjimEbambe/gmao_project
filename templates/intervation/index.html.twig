{% extends 'base.html.twig' %}

{% block title %}Intervation index{% endblock %}

{% block content %}


    <div class="container">
        <h1 class="mt-2">Liste des interventions</h1>
        <table class="table table-striped table-bordered table-sm">
            <thead>
            <tr>
                <th>Reference</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Dur√©e</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for intervation in intervations %}
                <tr>
                    <td>{{ intervation.reference }}</td>
                    <td>{{ intervation.name }}</td>
                    <td>{{ intervation.updatedAt ? intervation.updatedAt|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ intervation.time |date('H:i') }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm mt-1" href="{{ path('intervation_show', {'id': intervation.id}) }}">Voire</a>|
                        <a class="btn btn-sm btn-warning mt-1" href="{{ path('intervation_edit', {'id': intervation.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-sm btn-success" href="{{ path('intervation_new') }}">Ajouter une intervention</a>
    </div>

{% endblock %}
