

<div class="auth">
    <div class="container mt-1 mb-1 mt-5">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-md-6">
                <div class="card px-5">
                    <h5 class="mt-3 text-capitalize">Intervention</h5>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-6 mt-2">
                            <div class="form-input form-floating ">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-sm',  'placeholder':'Nom'}}) }}
                                <label for="patient_name">Nom</label>
                                <div class="form-error fst-italic">
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mt-2">
                            <div class="form-input form-floating">
                                {{ form_widget(form.equipement, {'attr': {'class': 'form-control form-control-sm',  'placeholder':'PostNom'}}) }}
                                <label for="patient_middlename">Equipement</label>
                                <div class="form-error fst-italic">
                                    {{ form_errors(form.equipement) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row px-md-3 mt-2 mx-md-4">
                        <label>Dur√©e d'intervention</label>
                        {{ form_widget(form.time, ) }}
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-6 ">
                            <div class="form-input form-floating ">
                                {{ form_widget(form.status, {'attr': {'class': 'form-control form-control-sm',  'placeholder':'Status'}}) }}
                                <label> Status</label>
                                <div class="form-error fst-italic">
                                    {{ form_errors(form.status) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-input form-floating ">
                                {{ form_widget(form.type, {'attr': {'class': 'form-control form-control-sm',  'placeholder':'Status'}}) }}
                                <label>Type</label>
                                <div class="form-error fst-italic">
                                    {{ form_errors(form.type) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="form-input form-floating ">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-sm',  'placeholder':'Description'}}) }}
                            <label for="patient_name">Description</label>
                            <div class="form-error fst-italic">
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>

                    <hr>
                    <div class="row px-3">
                        <label>Intervenant(s)</label>
                        {{ form_widget(form.intervenant) }}
                    </div>
                    <div class="d-grid gap-2 col-6 mx-auto mt-2">
                        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                    </div>

                         {% block button %}{% endblock %}
                        {{ form_end(form) }}
                    </div>
                    {% if  app.request.get('_route')=='intervation_edit'  %} {{ include('intervation/_delete_form.html.twig') }} {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>


