{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}

    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            {#  #}


            <div class="auth">
                <div class="container mt-1 mb-1 mt-5">
                    <div class="row d-flex align-items-center justify-content-center">
                        <div class="col-md-5">

                            {% if error %}
                                <div class="alert alert-danger"> Numéro ou mot de passe invalide </div>
                            {% endif %}

                            <div class="card">
                                <div class="card-header justify-content-center"> <h5 class="text-center">Connexion</h5>  </div>
                                <div class="card-body px-5 pt-5">
                                    <div class="form-input input-group">
                                        <div class="input-group-text" id="btnGroupAddon"> <i class="bi bi-telephone-fill"></i> </div>
                                        <input type="text" value="{{ last_username }}" name="phone" id="inputPhone" class="form-control2 form-control" autocomplete="username" required autofocus placeholder="Téléphone">
                                    </div>
                                    <div class="input-group form-input mt-4">
                                        <div class="input-group-text" id="btnGroupAddon"> <i class="bi bi-key-fill"></i></div>
                                        <input type="password" name="password" id="inputPassword" class="form-control2 form-control" autocomplete="current-password" required placeholder="Mot de passe">
                                    </div>
                                </div>

                                <div class="d-grid gap-2 col-8 mx-auto mt-2">
                                    <button class="btn btn-primary" type="submit">Se connecter</button>
                                </div>
                                <div class="login-checkbox-forget d-sm-flex justify-content-between align-items-center px-5 mt-3 mx-5">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                        </label>
                                    </div>
                                    <a class="forget" href="#">Mot de passe oublié?</a>
                                </div>

                                <div class="text-center mt-4 mt-5 mb-3"> <span>Pas inscrit!</span> <a href="{{ path('register') }}" class="text-decoration-none">S'inscrire</a> </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">




        </form>
    </div>
{% endblock %}
